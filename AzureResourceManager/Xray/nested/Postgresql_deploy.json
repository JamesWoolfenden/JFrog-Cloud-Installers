{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "outputs": {
    "dbServerName": {
      "type": "string",
      "value": "[parameters('db_server')]"
    },
    "db_edition": {
      "type": "string",
      "value": "[parameters('db_edition')]"
    },
    "manual_db_url": {
      "type": "string",
      "value": "[parameters('manual_db_url')]"
    }
  },
  "parameters": {
    "backupRetentionDays": {
      "defaultValue": 7,
      "type": "int"
    },
    "databases": {
      "type": "object"
    },
    "db_edition": {
      "allowedValues": [
        "Basic",
        "Standard",
        "Premium"
      ],
      "defaultValue": "Basic",
      "type": "string"
    },
    "db_location": {
      "type": "string"
    },
    "db_password": {
      "type": "securestring"
    },
    "db_server": {
      "defaultValue": "xraypostgressrv",
      "minLength": 1,
      "type": "string"
    },
    "db_user": {
      "defaultValue": "xray",
      "minLength": 1,
      "type": "string"
    },
    "geoRedundantBackup": {
      "defaultValue": "Disabled",
      "type": "string"
    },
    "manual_db_url": {
      "type": "string"
    },
    "publicNetworkAccess": {
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "defaultValue": "Enabled",
      "metadata": {
        "description": "Public Network Access"
      },
      "type": "string"
    },
    "skuCapacity": {
      "defaultValue": 2,
      "type": "int"
    },
    "skuFamily": {
      "defaultValue": "Gen5",
      "type": "string"
    },
    "skuName": {
      "defaultValue": "GP_Gen5_2",
      "type": "string"
    },
    "skuSizeMB": {
      "defaultValue": 5120,
      "type": "int"
    },
    "skuTier": {
      "defaultValue": "GeneralPurpose",
      "type": "string"
    },
    "sslEnforcement": {
      "allowedValues": [
        "Enabled",
        "Disabled"
      ],
      "defaultValue": "Disabled",
      "metadata": {
        "description": "SSL Enforcement"
      },
      "type": "string"
    },
    "version": {
      "defaultValue": "9.6",
      "type": "string"
    }
  },
  "resources": [
    {
      "apiVersion": "2017-12-01",
      "location": "[parameters('db_location')]",
      "name": "[parameters('db_server')]",
      "properties": {
        "administratorLogin": "[parameters('db_user')]",
        "administratorLoginPassword": "[parameters('db_password')]",
        "publicNetworkAccess": "[parameters('publicNetworkAccess')]",
        "sslEnforcement": "[parameters('sslEnforcement')]",
        "storageProfile": {
          "backupRetentionDays": "[parameters('backupRetentionDays')]",
          "geoRedundantBackup": "[parameters('geoRedundantBackup')]",
          "storageMB": "[parameters('skuSizeMB')]"
        },
        "version": "[parameters('version')]"
      },
      "resources": [
        {
          "apiVersion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.DBforPostgreSQL/servers', parameters('db_server'))]"
          ],
          "location": "[parameters('db_location')]",
          "name": "[uniqueString(parameters('db_server'), 'AllowAllWindowsAzureIps' )]",
          "properties": {
            "endIpAddress": "0.0.0.0",
            "startIpAddress": "0.0.0.0"
          },
          "type": "firewallRules"
        },
        {
          "apiversion": "2017-12-01",
          "dependsOn": [
            "[resourceId('Microsoft.DBforPostgreSQL/servers', parameters('db_server'))]"
          ],
          "name": "[concat(parameters('db_server'), '/', parameters('databases').properties[0].name)]",
          "properties": {
            "charset": "[parameters('databases').properties[0].charset]",
            "collation": "[parameters('databases').properties[0].collation]"
          },
          "type": "Microsoft.DBforPostgreSQL/servers/databases"
        }
      ],
      "sku": {
        "capacity": "[parameters('skuCapacity')]",
        "family": "[parameters('skuFamily')]",
        "name": "[parameters('skuName')]",
        "size": "[parameters('skuSizeMB')]",
        "tier": "[parameters('skuTier')]"
      },
      "type": "Microsoft.DBforPostgreSQL/servers"
    }
  ],
  "variables": {}
}
